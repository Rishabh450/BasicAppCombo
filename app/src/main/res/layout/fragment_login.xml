<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiteba"
    android:orientation="vertical"
    tools:context="com.example.rishabh.shopping.Login">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="282dp"
        android:layout_height="192dp"
        android:layout_alignStart="@+id/usernamee"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-27dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/loger" />

    <EditText
        android:id="@+id/usernamee"

        android:layout_width="228dp"
        android:layout_height="56dp"


        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="27dp"
        android:backgroundTint="#C0C0C0"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="	#C0C0C0"
        android:textColorHint="#C0C0C0" />

    <android.support.design.widget.TextInputLayout
        passwordToggleTint="#ffffff"
        android:layout_width="233dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"


        android:layout_marginBottom="105dp"
        android:backgroundTint="#C0C0C0"
        android:textColorHint="#C0C0C0"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/passwordd"

            android:layout_width="243dp"
            android:layout_height="match_parent"


            android:backgroundTint="#C0C0C0"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="	#C0C0C0"
            android:textColorHint="#C0C0C0" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/log"
        android:layout_width="71dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="3dp"
        android:onClick="log"
        android:src="@drawable/mainlog" />


</RelativeLayout>